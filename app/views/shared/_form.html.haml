.row
  - if @post.errors.any?
    .well
      %h3 There is some errors!
      %ul.list-group
        - @post.errors.full_messages.each do |msg|
          %li.list-group-item=msg
    %hr/
        
  = simple_form_for object, :html => {:class => "form-group"} do |f|
    = f.input :title, label: false, placeholder: "Title", :class => "form-control"
    = f.input :content, label: false, placeholder: "Create some Magic!", :class => "form-control"
    - if object.image?
      = image_tag object.image, width: "300px", class: "img-responsive"
    - else
      %img.img-responsive.img-rounded(src="http://via.placeholder.com/128x128")/  
    = f.input :image, label: false, :class => "form-control"
    = simple_fields_for @folder do |p|
      = collection_check_boxes :categories, :id, @all_categories, :id, :name, {}, {:multiple => true}

    = f.submit nil, class: "btn btn-primary"
      